{
  "extends": "./tsconfig.build.json",
  "compilerOptions": {
    "types": ["vitest/globals"],
    "baseUrl": ".",
    "paths": {
      "@bedrock-layout/appboundary": ["packages/appboundary/src"],
      "@bedrock-layout/center": ["packages/center/src"],
      "@bedrock-layout/column-drop": ["packages/column-drop/src"],
      "@bedrock-layout/columns": ["packages/columns/src"],
      "@bedrock-layout/cover": ["packages/cover/src"],
      "@bedrock-layout/css-reset": ["packages/css-reset/src"],
      "@bedrock-layout/frame": ["packages/frame/src"],
      "@bedrock-layout/grid": ["packages/grid/src"],
      "@bedrock-layout/inline": ["packages/inline/src"],
      "@bedrock-layout/inline-cluster": ["packages/inline-cluster/src"],
      "@bedrock-layout/masonry-grid": ["packages/masonry-grid/src"],
      "@bedrock-layout/padbox": ["packages/padbox/src"],
      "@bedrock-layout/reel": ["packages/reel/src"],
      "@bedrock-layout/register-resize-callback": [
        "packages/register-resize-callback/src"
